<%- include('../components/head') %>

<main class="page-login page-form h-stretch">
    <div class="page-login-form page-form-container">
        <div class="base-form">
            <h1>Вход</h1>
            <form action="" method="post">
                <div class="form-group">
                    <input type="text" name="login" id="login-input" required>
                    <label class="input-label" for="login-input">Логин</label>

                    <span class="input-error"></span>
                </div>
                <div class="form-group">
                    <input type="password" name="password" id="password-input" required>
                    <label class="input-label" for="password-input">Пароль</label>

                    <span class="input-error"></span>
                </div>
                <div class="form-footer">
                    <button type="submit" class="btn submit-btn">Авторизоваться</button>
                    <a href="" class="form-link no-account-link">Нет аккаунта?</a>
                </div>
            </form>
        </div>

    </div>
</main>

<%- include('../components/footer') %>